
extends layout

block styles
	link(rel='stylesheet' href='/static/4814b1b3.css')

block content
	body(class="bg-gray-900 flex flex-col items-center p-10")
		h1(class="text-6xl text-white italic text-center") New Package
		h2(class="text-2xl text-white italic text-center")
			| Kiki's Delivery Service

		form(class="flex gap-4" action="/package/new/" method="POST")
			div(class="flex flex-col bg-slate-800 p-5 rounded-lg")
				h3(class="text-2xl text-white") Sender
				label(for="sfn" class="mt-5 text-white text-xl") First Name
				input(name="sfn" type="text" placeholder="Scott" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="sln" class="mt-5 text-white text-xl") Last Name
				input(name="sln" type="text" placeholder="Stirling" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="se" class="mt-5 text-white text-xl") Email
				input(name="se" type="email" placeholder="stirling@allthe.sports" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="spn" class="mt-5 text-white text-xl") Phone Number
				input(name="spn" type="tel" placeholder="+45 123 456 7890" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="ssa" class="mt-5 text-white text-xl") Street Address
				input(name="ssa" type="text" placeholder="1234 Main St" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="szc" class="mt-5 text-white text-xl") ZIP Code
				input(name="szc" type="number" placeholder="12345" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="sc" class="mt-5 text-white text-xl") City
				input(name="sc" type="text" placeholder="Anytown" class="mt-3 rounded-lg px-2 py-1", required)

			div(class="flex flex-col bg-slate-800 p-5 rounded-lg")
				h3(class="text-2xl text-white") Package
				label(for="w" class="mt-5 text-white text-xl") Weight(kg)
				input(name="w" type="number" placeholder="5" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="c" class="mt-5 text-white text-xl") Contents
				textarea(name="c" placeholder="Methamphetamine" class="mt-3 rounded-lg px-2 py-1 h-full", required)

			div(class="flex flex-col bg-slate-800 p-5 rounded-lg")
				h3(class="text-2xl text-white") Receiver
				label(for="rfn" class="mt-5 text-white text-xl") First Name
				input(name="rfn" type="text" placeholder="Roy" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="rln" class="mt-5 text-white text-xl") Last Name
				input(name="rln" type="text" placeholder="Kent" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="re" class="mt-5 text-white text-xl") Email
				input(name="re" type="email" placeholder="rkent@richmond.uk" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="rpn" class="mt-5 text-white text-xl") Phone Number
				input(name="rpn" type="tel" placeholder="+45 234 567 8901" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="rsa" class="mt-5 text-white text-xl") Street Address
				input(name="rsa" type="text" placeholder="4321 Main St" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="rzc" class="mt-5 text-white text-xl") ZIP Code
				input(name="rzc" type="number" placeholder="23456" class="mt-3 rounded-lg px-2 py-1", required)
				label(for="rc" class="mt-5 text-white text-xl") City
				input(name="rc" type="text" placeholder="Someplace" class="mt-3 rounded-lg px-2 py-1", required)
			button(type="submit" class="mt-3 bg-orange-400 px-2 py-1 text-white rounded-lg") Submit
